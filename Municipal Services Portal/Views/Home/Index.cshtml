@{
    ViewData["Title"] = "Home Page";
}

<!--Main section with image and title-->
<div class="hero-banner">
    <div class="overlay"></div>
    <div class="hero-text">
        <h1>Welcome to the Cape Town Municipal Portal</h1>
        <p>Report issues, View issues and Connect with your community</p>
        <a href="ReportIssue/ReportIssues" class="btn-cta">Report an Issue</a>
    </div>
</div>

<!--Issue information card - Displays total amount of issues, most recent issue and pending issues-->
<div class="issues-container">
    <div class="card-horizontal">
        <div class="section">
            <i class="fas fa-list"></i>
            <h5>Total Issues</h5>
            <p>@ViewData["TotalIssues"]</p>
        </div>
        <div class="section">
            <i class="fas fa-exclamation-triangle"></i>
            <h5>Most Recent</h5>
            <p>Location: @ViewData["MostRecentIssueLocation"]</p>
            <p>Issue: @ViewData["MostRecentIssueDescription"]</p>
        </div>
        <div class="section">
            <i class="fas fa-clock"></i>
            <h5>Pending Issues</h5>
            <p>@ViewData["PendingIssues"]</p>
        </div>
    </div>
</div>

<!--Split mid info section-->
<div class="split-info-banner">
    <div class="info-left">
        <h4>Why Use This Portal?</h4>
        <p>This portal allows you to contribute to your community by reporting issues and speaking up, helping us resolve them quickly and effectively.</p>
    </div>
    <div class="info-right">
        <h4>Helpful Tips</h4>
        <ul>
            <li><i class="fas fa-check-circle"></i> > Make a difference in your community.</li>
            <li><i class="fas fa-check-circle"></i> > Stay updated with news & updates</li>
            <li><i class="fas fa-check-circle"></i> > No issue is to small.</li>
            <li><i class="fas fa-check-circle"></i> > Contact us anytime.</li>
        </ul>
    </div>
</div>

<!--Our services cards and background-->
<div class="features-section">
    <h4>Our Services</h4>
    <div class="features-cards">
        <div class="features-card">
            <i class="fas fa-bullhorn"></i>
            <h5>Report an Issue</h5>
            <p>Report issues in your area to help our community.</p>
            <a href="ReportIssue/ReportIssues" class="btn-cta">Report Issue</a>
        </div>
        <div class="features-card">
            <i class="fas fa-eye"></i>
            <h5>View Reported Issues</h5>
            <p>View all issues reported by the community</p>
            <a href="ReportIssue/ViewIssues" class="btn-cta">View All Issues</a>
        </div>
        <div class="features-card">
            <i class="fas fa-newspaper"></i>
            <h5>Local Events & Announcements</h5>
            <p>Stay informed with community events and announcements.</p>
            <a href="Event/Events" class="btn-cta">View Events</a>
        </div>
        <div class="features-card">
            <i class="fas fa-newspaper"></i>
            <h5>Service Request Status</h5>
            <p>View service request updates in real time.</p>
            <a href="" class="btn-cta disabled">Unavailable</a>
        </div>
        
    </div>
</div>

<!--About this portal section-->
<div class="about-section">
    <h4>About This Portal</h4>
    <p>
    This municipal portal helps Cape Town residents report and view issues, track their progress, and stay informed
    with community news and announcements. It encourages residents to make a difference and aims to build transparency between
     the community and municipal services.
    
    </p>
</div>
