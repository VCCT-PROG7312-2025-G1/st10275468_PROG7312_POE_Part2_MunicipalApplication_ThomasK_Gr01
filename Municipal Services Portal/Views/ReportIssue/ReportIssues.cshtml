@{
    ViewData["Title"] = "Report an Issue";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">Report an Issue</h1>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center">@ViewBag.Message</div>
    }

    <div class="d-flex justify-content-center">
        <div class="card shadow-lg w-100" style="max-width: 600px;">
            <div class="card-body">
                <form asp-action="ReportIssues" method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input type="text" id="location" name="location" class="form-control" placeholder="Enter Location" />
                        <small class="text-muted">Example Address</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select id="category" name="category" class="form-select">
                            <option value="">Select a category</option>
                            <option value="TestCategory">TestCategory</option>
                        </select>
                        <small class="text-muted">Choose the type of issue</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea id="description" name="description" class="form-control" rows="4" placeholder="Describe the issue"></textarea>
                        <small class="text-muted">Provide as much detail as possible</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Attach Photo/Document</label>
                        <input type="file" name="media" class="form-control" />
                    </div>

                    <div class="mb-4">
                        <div class="progress" style="height: 15px; border-radius: 10px;">
                            <div id="progressBar" class="progress-bar bg-success" role="progressbar" style="width:0%; font-size: 0.8rem;">
                                0%
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Submit Issue</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<div class="mt-5 text-center">
    <h5>Tips for Submitting Issues</h5>
    <ul class="list-unstyled text-muted">
        <li>Enter location.</li>
        <li>Choose the category.</li>
        <li>Describe the issue.</li>
        <li>Attach photos.</li>
    </ul>
</div>

@section Scripts {
    <script>
        const inputs = ['location', 'category', 'description'];
        inputs.forEach(id => {
            document.getElementById(id).addEventListener('input', updateProgress);
        });

        function updateProgress() {
            let filled = inputs.filter(id => document.getElementById(id).value.trim() !== "").length;
            let percent = (filled / inputs.length) * 100;
            let bar = document.getElementById('progressBar');
            bar.style.width = percent + '%';
            bar.innerText = Math.round(percent) + '%';
        }
    </script>
}
