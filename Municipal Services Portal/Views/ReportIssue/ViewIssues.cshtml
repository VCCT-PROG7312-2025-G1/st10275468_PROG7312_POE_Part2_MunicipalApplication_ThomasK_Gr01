@model Municipal_Services_Portal.Models.Issue[]

@{
    ViewData["Title"] = "Reported Issues";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5">Reported Issues</h1>
        <p class="text-muted">View all issues</p>
    </div>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No issues have been reported yet.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var issue in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@issue.Category</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@issue.Location</h6>
                            <p class="card-text flex-grow-1">@issue.Description</p>
                            <p class="mb-1"><strong>Submitted:</strong> @issue.DateSubmitted.ToString("dd MMM yyyy HH:mm")</p>
                            <p>
                                <strong>Status:</strong>
                                <span class="badge @(issue.Status == "Pending" ? "bg-warning" : "bg-success")">
                                    @issue.Status
                                </span>
                            </p>
                            @if (!string.IsNullOrEmpty(issue.MediaPath))
                            {
                                <a href="@issue.MediaPath" target="_blank" class="btn btn-sm btn-outline-primary mt-auto">View Attachment</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

